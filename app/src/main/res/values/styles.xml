<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AnimActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_open_activity</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_close_activity</item>
    </style>
    <style name="BottomSheetAnimationDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowAnimationStyle">@style/BottomSheetAnimationStyle</item>
    </style>
    <style name="BottomSheetAnimationStyle" parent="Animation.Design.BottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_sheet_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_sheet_exit</item>
    </style>
    <style name="ThemePolarDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/PolarDialogAnimationStyle</item>
    </style>
    <style name="PolarDialogAnimationStyle" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_polar_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_polar_dialog_exit</item>
    </style>
</resources>